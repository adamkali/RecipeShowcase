{{ define "recipe/recipe-preview.tmpl" }}
<div class="flex flex-col w-full">
    {{ range .RecipeList }}
        <div class="w-32 mx-auto bg-slate-400 rounded-lg shadow-lg p-4
        mb-4">
            <h2 class="text-2xl font-semibold text-purple-400 mb-4">{{ .Name }}</h2>
            <div class="flex flex-wrap gap-2">
                {{ range .Ingredients }}
                    <span class="rounded-full bg-blue-200 px-2 py-1 text-sm">
                        {{ .Name }}
                    </span>
                {{ end }}
            </div>
        </div>
    {{ end }}
</div>
{{ end }}
