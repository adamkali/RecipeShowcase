{{ define "recipe/recipe-form-name.tmpl" }}
<div
    id="{{ .ID }}-name"
    class="w-full mx-auto my-2 p-4 text-purple-400"
>
    <label>New Recipe Name:&nbsp;</label>
    <input
        type="text"
        name="name"
        class="p-2 mx-auto my-2 bg-gray-600 text-sky-400"
        value="{{ .Name }}"
        hx-trigger="change"
        hx-swap="#{{ .ID }}-name"
        hx-target="outerHTML"
        hx-put="/recipe/{{ .ID }}/name"
    >          
    </input>
</div>          
{{ end }}
